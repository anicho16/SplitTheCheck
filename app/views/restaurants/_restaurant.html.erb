<div id="<%= dom_id restaurant %>" class = "show-content">
  <p class="show-restaurant">
    <%= restaurant.name %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= restaurant.location %>
  </p>
  <div>
    <div class = "split-info">
      <div>Will Split:</div>
      <%= restaurant.willSplit %>
    </div>
    <div class="split-info">
      <div >Won't Split:</div>
      <%= restaurant.wontSplit %>
    </div>
  </div>
</div>
