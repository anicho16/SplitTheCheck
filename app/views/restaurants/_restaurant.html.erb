<div id="<%= dom_id restaurant %>" class="show-content">
  <p class="show-restaurant">
    <%= restaurant.name %>
  </p>
  <div>
    <div class="split-info green">
      <div>Will Split:</div>
      <%= restaurant.willSplit %>
    </div>
    <div class="split-info red">
      <div>Won't Split:</div>
      <%= restaurant.wontSplit %>
    </div>
  </div>
  <%if logged_in? %>
  <p class="large-text">Cast Your Vote</p>

  <div class="btn-group">
    <%= button_to "Will Split", increment_will_split_restaurant_path(restaurant, restaurant_id: restaurant.id), method: :patch, class: "btn btn-will" %>
    <%= button_to "Won't Split", increment_wont_split_restaurant_path(restaurant, restaurant_id: restaurant.id), method: :patch, class: "btn btn-wont" %>
  </div>
  <% end %>
</div>
