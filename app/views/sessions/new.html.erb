<div class = "new-area">
<h1 class='text-center'>Log in</h1>

<div class="row">
  <div class="col-md-6 offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :email, style: "display: block" %>
      <%= f.email_field :email, class: "new-text" %>

      <%= f.label :password, style: "display: block" %>
      <%= f.password_field :password, class: "new-text" %>

      <div>
      <%= f.submit "Log in", class: "btn-primary" %>
      <%= link_to "Cancel", restaurants_path, class: "btn-primary" %>
      </div>
    <% end %>

  </div>
  <% flash.each do |key, value| %>
    <div style="color: red" class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
</div>
</div>