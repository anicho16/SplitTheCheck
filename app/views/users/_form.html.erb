<%= form_with(model: user, local: true) do |f| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :username, style: "display: block" %>
  <%= f.text_field :username, class: "new-text" %>

  <%= f.label :email, style: "display: block" %>
  <%= f.email_field :email, class: "new-text" %>

  <%= f.label :password, style: "display: block" %>
  <%= f.password_field :password, class: "new-text" %>

  <%= f.label :password_confirmation, "Confirmation", style: "display: block" %>
  <%= f.password_field :password_confirmation, class: "new-text" %>

  <div>
    <%= f.submit "Create my account", class: "btn-primary" %>
    <%= link_to "Cancel", restaurants_path, class: "btn-primary" %>
  </div>
<% end %>
